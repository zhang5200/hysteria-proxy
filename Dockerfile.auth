FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY auth_server.go user_management.go index.html ./
COPY static ./static
RUN go build -o auth-server .

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/auth-server .
COPY --from=builder /app/static ./static
# index.html is embedded in the binary
EXPOSE 8080
CMD ["./auth-server"]
